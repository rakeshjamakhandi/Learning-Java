
public class Demo {
	public void Selectionsorting(int arr[]) {
	      for(int i=0;i<=arr.length-1;i++) {
	    	  int  min=arr[i];
	    	  int pos=i;
	    	  for(int j=0;j<=arr.length-1;j++) {
	    		  if(arr[j]<pos) {
	    			  min=arr[j];
	    			  pos=j;
	    		  }
	    	  }
	    	  int swap=arr[i];
	    	  arr[i]=pos;
	    	  pos=swap;
		
	      }
	}

}
